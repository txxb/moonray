---
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro'
import * as Image from '../scripts/ImagePath'
---

<head>
  <title>MoonRay Production Renderer</title>
  <link rel="icon" href={Image.favicon} type="image/x-icon" />  
</head>
<body class="flex justify-center min-h-screen bg-dreamworks-blue text-gray-800 font-helvetica">
  <div class="flex w-full max-w-7xl bg-white shadow-md">
    <div class="flex-none w-70 p-4 bg-white hidden md:flex flex-col border-r border-gray-200">
      <Menu/>
    </div>
    <div class="flex-1 flex flex-col">
      <slot />
      <hr class="border-t-2 my-4" />
      <Footer/>
    </div>
  </div>
</body>
</html>
