---
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro'
import * as Image from '../scripts/ImagePath'
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MoonRay Production Renderer</title>
  <link rel="icon" href={Image.favicon} type="image/x-icon" />  
</head>
<body class="flex justify-center min-h-screen bg-dreamworks-blue text-gray-800 font-helvetica">
  <div class="flex w-full max-w-7xl bg-white shadow-md pt-16 md:pt-0">
    <div class="flex-none md:p-4 bg-white  md:flex flex-col border-gray-200">
      <Menu/>
    </div>
    <div class="flex-1 flex flex-col md:ml-80">
      <slot />
      <Footer/>
    </div>
  </div>
</body>
</html>
