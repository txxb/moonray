---
import FullscreenImage from './FullscreenImage.astro'
export interface Props {
  date: string
  story: string
  youTubeVideoURL?: string
  imageURL?: string 
}

const { date, story, youTubeVideoURL = "", imageURL = "" } = Astro.props
---

<div>
  <h3 class="border-b-2 border-gray-400 pb-1 pt-5">{date}</h3>

  <div class="pt-3" set:html={story}></div>

  {youTubeVideoURL ? (
  <div class="w-full max-w-3xl mx-auto aspect-video rounded-xl overflow-hidden shadow-lg"> <iframe class="w-full h-full" src={youTubeVideoURL} title="YouTube video player" 
  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowFullScreen >
    </iframe> </div>
  ) : imageURL ? (
    <div class="flex justify-center pt-4">
      <FullscreenImage src={imageURL}       
      width="w-74"/>
    </div>
  ) : (
    <br />
  )}
</div>
